#include <stdio.h>

int main()
{
    float a, b, c;
    printf("Enter three numbers: \n");
    scanf("%f", &a);
    scanf("%f", &b);
    scanf("%f", &c);
    if (a < b && a < c)
    {
        printf("%f is smaller", a);
    }
    else if (b < a && b < c)
    {
        printf("%f is smaller", b);
    }
    else if (c < a && c < b)
    {
        printf("%f is smaller", c);
    }

    return 0;
}
